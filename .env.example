# =============================================================================
# DELTA REVERSAL STRATEGY CONFIGURATION
# =============================================================================
# These variables control the optimized 10x leverage strategy
# Add these to your .env file

# === Leverage & Stop Loss ===
LEVERAGE=10
STOP_LOSS_PERCENT=7

# === Trailing Stop ===
TRAIL_ACTIVATION_PERCENT=10
TRAIL_CALLBACK_PERCENT=4

# === Delta Stream (for momentum detection) ===
DELTA_WINDOW_SEC=20

# === Reentry Logic (after TS exit) ===
REENTRY_COOLDOWN_SEC=300
REENTRY_DROP_PERCENT=5.0
MAX_REENTRIES=5

# === Instant Reentry (no cooldown when delta is strong) ===
INSTANT_REENTRY_ENABLED=true
INSTANT_REENTRY_DELTA_MULT=1.5       # delta > avg Ã— 1.5 = instant reentry
INSTANT_REENTRY_MAX_PER_HOUR=2       # Max instant reentries per hour (loop protection)
INSTANT_REENTRY_MIN_PROFIT_PCT=5     # Only for profitable exits (5%+ profit)

# === Signal Lifetime ===
SIGNAL_LIFETIME_HOURS=24

